// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String  @id @default(uuid())
  email        String  @unique
  password     String
  kcal         Int?
  carbohydrate String?
  protein      String?
  fat          String?
  Meals        Meals[]
}

model Food {
  id           String  @id @default(uuid())
  name         String
  kcal         Int
  carbohydrate String
  protein      String
  fat          String
  Meals        Meals[]
}

model Meals {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userEmail], references: [email])
  userEmail String
  category  Int
  food      Food     @relation(fields: [foodId], references: [id])
  foodId    String
  serving   Int
  day       DateTime
}
